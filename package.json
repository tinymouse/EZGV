{
    "name": "ezgv",
    "version": "0.9.0",
    "description": "簡単画像管理",
    "main": "src/main.js",
    "type": "commonjs",
    "devDependencies": {
        "electron": "^39.2.7",
        "electron-builder": "^26.4.0"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1"
    },
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "homepage": "https://github.com/tinymouse/ezgv",
    "author": {
        "name": "Tiny Mouse",
        "email": "khc04052@nifty.com"
    },
    "license": "ISC",
    "build": {
        "appId": "jp.tinymouse.ezgv",
        "productName": "簡単画像管理",
        "copyright": "Copyright © 2026 Tiny Mouse",
        "files": [
            "src/**/*"
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "res/icon/icon.ico"
        },
        "nsis": {
            "artifactName": "EZGV Setup ${version}.${ext}",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "簡単画像管理",
            "installerIcon": "res/installer/win/Setup.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "res/icon/icon.png"
        },
        "linux": {
            "target": "deb",
            "icon": "res/icon/icon.png",
            "category": "Utility"
        }
    }
}