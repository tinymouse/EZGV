{
    "name": "ezgv",
    "version": "0.9.16",
    "description": "EZ 画像管理",
    "author": {
        "name": "Tiny Mouse",
        "email": "khc04052@nifty.com"
    },
    "homepage": "https://github.com/tinymouse/ezgv",
    "repository": {
        "type": "git",
        "url": "https://github.com/tinymouse/EZGV.git"
    },
    "license": "ISC",
    "main": "src/main.js",
    "type": "commonjs",
    "devDependencies": {
        "electron": "^39.2.7",
        "electron-builder": "^26.4.0"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "electron-log": "^5.4.3",
        "electron-updater": "^6.7.3"
    },
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build"
    },
    "build": {
        "publish": {
            "provider": "github",
            "owner": "tinymouse",
            "repo": "EZGV"
        },
        "appId": "jp.tinymouse.ezgv",
        "productName": "EZ 画像管理",
        "copyright": "Copyright © 2026 Tiny Mouse",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "res/icon/icon.ico"
        },
        "nsis": {
            "artifactName": "EZGV Setup ${version}.${ext}",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "EZ 画像管理",
            "installerIcon": "res/installer/win/Setup.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "res/icon/icon.png"
        },
        "linux": {
            "target": "deb",
            "icon": "res/icon/icon.png",
            "category": "Utility"
        }
    }
}